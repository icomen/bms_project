                  <ImageView fitHeight="34.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/multimeter.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="68.0" prefHeight="58.0" prefWidth="62.0" text="parameters">
               <graphic>
                  <ImageView fitHeight="33.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/parameters.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <Button contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false" opacity="0.0" prefHeight="51.0" prefWidth="66.0" text="Button" />
            <JFXToggleButton fx:id="boton" contentDisplay="GRAPHIC_ONLY" onAction="#setDarkMode" text="dark_mode" unToggleLineColor="BLACK" />
         </children>
      </VBox>
   </left>
</BorderPane>
