<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.bms_project.RootLayoutController">
   <left>
      <VBox prefHeight="400.0" prefWidth="50.0" styleClass="sidepane" stylesheets="@RootStyle.css" BorderPane.alignment="CENTER">
         <children>
            <Pane onMouseClicked="#handleAbout" prefHeight="57.0" prefWidth="62.0">
               <children>
                  <ImageView fitHeight="65.0" fitWidth="112.0" layoutX="-23.0" layoutY="1.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/logo-UNICAS.png" />
                     </image>
                  </ImageView>
               </children>
            </Pane>
            <JFXButton contentDisplay="GRAPHIC_ONLY" prefHeight="58.0" prefWidth="62.0" text="user">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/user.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="184.0" prefHeight="58.0" prefWidth="62.0" text="home">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../images/home.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXButton contentDisplay="GRAPHIC_ONLY" layoutX="10.0" layoutY="68.0" prefHeight="58.0" prefWidth="62.0" text="measurements">
